@model CreateMembershipRequestDto

<h2>Request Membership</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form method="post">
    <div class="form-group">
        <label>Membership Plan</label>
        <select asp-for="MembershipPlanId" asp-items="Model.AvailablePlans" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Select Books</label>
        <select asp-for="SelectedBookIds" asp-items="Model.AvailableBooks" class="form-control" multiple="multiple"></select>
        <small class="text-muted">Select books according to your plan</small>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Request Membership</button>
</form>
