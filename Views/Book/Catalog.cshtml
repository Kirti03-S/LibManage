@model IEnumerable<LibManage.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Book Catalog";
}

<h2 class="text-center my-4">📚 Explore Book Catalog</h2>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                {
                    <img src="@book.CoverImageUrl" class="card-img-top" alt="Book Cover" style="height: 300px; object-fit: cover;" />
                }
                else
                {
                    <img src="~/images/default-book.jpg" class="card-img-top" alt="Default Book Cover" />
                }
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">
                        <strong>Author:</strong> @book.Author?.FirstName <br />
                        <strong>Genre:</strong> @book.Genre?.Name <br />
                        <strong>Price:</strong> ₹@book.Price <br />
                        <strong>ISBN:</strong> @book.ISBN
                    </p>
                </div>
            </div>
        </div>
    }

</div>
