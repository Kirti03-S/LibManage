@model LibManage.DTOs.Review.CreateReviewDto
@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Book ID</label>
        <input asp-for="BookId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Member ID</label>
        <input asp-for="MemberId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rating</label>
        <input asp-for="Rating" class="form-control" min="1" max="5" type="number" />
    </div>

    <div class="form-group">
        <label>Comment</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

