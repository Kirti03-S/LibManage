@model LibManage.DTOs.LendingRecord.CreateLendingRecordDto
@{
    ViewData["Title"] = "Add Lending Record";
}

<h2>Add Lending Record</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Book ID</label>
        <input asp-for="BookId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Member ID</label>
        <input asp-for="MemberId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Borrowed Date</label>
        <input asp-for="BorrowedDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

