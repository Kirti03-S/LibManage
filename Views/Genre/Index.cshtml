@model List<LibManage.DTOs.GenreDto>

@{
    ViewData["Title"] = "Genres";
}

<h2>Genres</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Genre</a>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Genre Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
            </tr>
        }
    </tbody>
</table>
