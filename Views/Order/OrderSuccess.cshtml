@model List<LibManage.ViewModels.OrderSuccessViewModel>

@{
    ViewData["Title"] = "Order Placed";
}

<h2 class="text-success text-center mt-4">🎉 Order Placed Successfully!</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.CoverImageUrl" class="card-img-top" alt="@item.Title" style="height: 300px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">Price: ₹@item.Price</p>
                        <p class="card-text">Quantity: @item.Quantity</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-primary btn-lg">📄 View My Orders</a>
    </div>
</div>

