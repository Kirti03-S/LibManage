@model IEnumerable<LibManage.ViewModels.BookCatalogViewModel>

@{
    ViewData["Title"] = "Explore Book Catalog";
}

<h2>Explore Book Catalog 📚</h2>

<!-- ✅ Show messages (AddToCart feedback) -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@book.CoverImageUrl" class="card-img-top" alt="Book Cover"
                     style="height: 300px; object-fit: cover;" />

                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">
                        <strong>Author:</strong> @book.AuthorName<br />
                        <strong>Genre:</strong> @book.GenreName<br />
                        <strong>Price:</strong> ₹@book.Price<br />
                    </p>
                </div>

                <div class="card-footer text-center">
                    @if (book.Stock > 0)
                    {
                        <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" method="post">
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">Out of Stock</span>
                    }

                    @* <!-- Optional: View Cart Button --> *@
                    @* <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary mt-2"> *@
                    @*     View Cart *@
                    @* </a> *@
                </div>
            </div>
        </div>
    }
</div>

